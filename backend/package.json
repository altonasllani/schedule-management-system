{
  "name": "sms-backend",
  "private": true,
  "scripts": {
    "dev:gateway": "nodemon gateway/index.js",
    "dev:auth": "nodemon services/auth/index.js",
    "dev:catalog1": "nodemon services/catalog1/index.js",
    "dev:catalog2": "nodemon services/catalog2/index.js",
    "dev:schedule": "nodemon services/schedule/index.js",
    "dev:all": "npm-run-all -p dev:*",
    
    "test": "jest services/catalog2/tests --forceExit --detectOpenHandles --setupFilesAfterEnv=./jest.setup.js",
    "test:all": "jest --forceExit --detectOpenHandles --setupFilesAfterEnv=./jest.setup.js",
    "test:watch": "jest --watchAll --forceExit --detectOpenHandles --setupFilesAfterEnv=./jest.setup.js",
    "test:coverage": "jest --coverage --forceExit --detectOpenHandles --setupFilesAfterEnv=./jest.setup.js",
    
    "test:catalog1": "jest services/catalog1/tests --forceExit --detectOpenHandles",
    "test:catalog2": "jest services/catalog2/tests --forceExit --detectOpenHandles --setupFilesAfterEnv=./jest.setup.js",
    "test:catalog2:watch": "jest services/catalog2/tests --watchAll --forceExit --detectOpenHandles --setupFilesAfterEnv=./jest.setup.js",
    "test:catalog2:verification": "jest services/catalog2/tests --forceExit --detectOpenHandles --setupFilesAfterEnv=./jest.setup.js --testNamePattern=\"verification\"",
    
    "test:auth": "jest services/auth/tests --forceExit --detectOpenHandles",
    "test:schedule": "jest services/schedule/tests --forceExit --detectOpenHandles",
    
    "test:report": "jest services/catalog2/tests --json --outputFile=test-results.json --forceExit --detectOpenHandles --setupFilesAfterEnv=./jest.setup.js"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  }
}
